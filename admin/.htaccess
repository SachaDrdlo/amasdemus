# Activation du module de réécriture d'URL :
RewriteEngine on
RewriteBase /

# Règles de réécriture d'URL :

# LOCAL CONNECTION
#RewriteRule ^beer$   ./index.php?page=beer
#RewriteRule ^edit/([0-9]+)$   ./index.php?page=beer&id=$1
#RewriteRule ^delete/([0-9]+)$   ./index.php?page=beer&operation=delete&id=$1
#RewriteRule ^login$   ./index.php?page=login

#ONLINE CONNECTION
RewriteRule ^amasdemus/admin/beer$   amasdemus/admin/index.php?page=beer
RewriteRule ^amasdemus/admin/edit/([0-9]+)$   amasdemus/admin/index.php?page=beer&id=$1
RewriteRule ^amasdemus/admin/delete/([0-9]+)$   amasdemus/admin/index.php?page=beer&operation=delete&id=$1
RewriteRule ^amasdemus/admin/login$   amasdemus/admin/index.php?page=login
