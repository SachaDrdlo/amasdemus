# Activation du module de réécriture d'URL :
RewriteEngine on
#RewriteBase /

# Règles de réécriture d'URL :

# LOCAL CONNECTION
RewriteRule ^beer$   ./index.php?page=beer
RewriteRule ^edit/([0-9]+)$   ./index.php?page=beer&id=$1
RewriteRule ^delete/([0-9]+)$   ./index.php?page=beer&operation=delete&id=$1
RewriteRule ^edit_brewery/([0-9]+)$   ./index.php?page=brewery&id=$1
RewriteRule ^delete_brewery/([0-9]+)$   ./index.php?page=brewery&operation=delete&id=$1
RewriteRule ^login$   ./index.php?page=login
RewriteRule ^breweries$   ./index.php?page=breweries
RewriteRule ^brewery$   ./index.php?page=brewery


